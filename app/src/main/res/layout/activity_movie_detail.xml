<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="activityViewModel"
                type="net.paulacr.movieslover.ui.moviedetail.MovieDetailViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/movieTitleDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Movie title"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/dimen_8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/dimen_8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintHorizontal_bias="0.498"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/accessibility_backdrop_image"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/movieTitleDetail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dimen_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:id="@+id/movieBackdropDetail"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_40dp" app:layout_constraintTop_toBottomOf="@+id/movieBackdropDetail"
                android:id="@+id/movieDescriptionDetail"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Runtime"
                android:id="@+id/movieRuntimeDetail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/movieDescriptionDetail"
                android:layout_marginTop="@dimen/dimen_40dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Language"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:id="@+id/language"
                android:layout_marginTop="@dimen/dimen_40dp"
                app:layout_constraintTop_toBottomOf="@+id/movieRuntimeDetail"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="link"
                android:id="@+id/movieLinkDetail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/language"
                android:layout_marginTop="@dimen/dimen_40dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>